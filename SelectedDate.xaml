<Window x:Class="HomeWork_7.SelectedDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_7"
        mc:Ignorable="d"
        Title="SelectedDate" MinHeight="220" MinWidth="220" MaxHeight="220" MaxWidth="220"  WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Calendar Grid.Row="0" SelectionMode="SingleRange" x:Name="SelectedCal"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="Ok" Content="Подтвердить" Margin="5" Click="Ok_Click"/>
            <Button Name="Cancel" Content="Закрыть" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
